<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.rodrigues.sucesso2017.CadastroActivity">

    <EditText
        android:id="@+id/email_ET"
        style="@style/LoginStyle"
        android:hint="@string/loginString" />

    <EditText
        android:id="@+id/senha_Cad_ET"
        style="@style/LoginStyle"
        android:hint="@string/senhaString"
        android:inputType="textPassword" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_email_black_24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:hint="Email:" />

    </LinearLayout>

    <Button
        android:id="@+id/button_ET"
        style="@style/LoginStyle"
        android:background="@drawable/gradient_bg"
        android:onClick="singUpUser"
        android:text="@string/cadastrarString" />

</LinearLayout>
